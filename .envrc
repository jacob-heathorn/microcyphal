# Set project directories.
export PROJECT_ROOT=$(dirname "$(realpath "${BASH_SOURCE[0]}")")
export MICROCYPHAL_ROOT=$PROJECT_ROOT
export FORGE_ROOT=$(gordion -f forge)
export ETL_ROOT=$(gordion -f etl)
export NUNAVUT_ROOT=$(gordion -f nunavut)
export PYDSDL_ROOT=$(gordion -f pydsdl)
export PUBLIC_REGULATED_DATA_TYPES_ROOT=$(gordion -f public_regulated_data_types)

# Use nix-direnv
if ! has nix_direnv_version || ! nix_direnv_version 3.0.6; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.0.6/direnvrc" "sha256-RYcUJaRMf8oF5LznDrlCXbkOQrywm0HDv1VjYGaJGdM="
fi

use flake $FORGE_ROOT

# Add command path
export PATH=$PATH:$PROJECT_ROOT/scripts/bin

# Set paths to some external tools
export NATIVE_GDB_PATH=/usr/bin/gdb

# Remove any existing public_regulated_data_types from CYPHAL_PATH and add current project's DSDL
export CYPHAL_PATH=$(echo "$CYPHAL_PATH" | tr ':' '\n' | grep -v "public_regulated_data_types" | tr '\n' ':' | sed 's/:$//')
export CYPHAL_PATH="$PUBLIC_REGULATED_DATA_TYPES_ROOT:$CYPHAL_PATH"
